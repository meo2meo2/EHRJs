}

<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <h2 class="bg-info">Vitals Form</h2>
        @using (Html.BeginForm("PostVitals", "Home", FormMethod.Post))
            {
                <form method="post" class="needs-validation">
                    <div class="form-group mb-3">
                        <label for="height" class="form-label">Patient ID</label>
                        <div class="input-group">
                            <input type="text" id="patientId" name="patientId" placeholder="154ec7af-8dfa-45b9-a29c-dd6f10a862f9" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="height" class="form-label">Height</label>
                        <div class="input-group">
                            <input type="number" id="height" name="height" class="form-control" min="30"
                                   max="100" required step="0.5"
                                   placeholder="Enter height"/>
                            <span class="input-group-text" id="heightSuffix">Inches</span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="weight" class="form-label">Weight</label>
                        <div class="input-group">
                            <input type="number" id="weight" name="weight" min="100"
                                   max="300" class="form-control" required step="0.01"
                                   placeholder="Enter weight"/>
                            <span class="input-group-text" id="weightSuffix">lbs</span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="bloodPressure" class="form-label">Blood Pressure</label>
                        <div class="input-group">
                            <input type="text" id="bloodPressure" name="bloodPressure" class="form-control" required
                                   pattern="\d{2,3}\/\d{2,3}" placeholder="Format: 120/80"/>
                            <span class="input-group-text" id="bloodPressureSuffix">mm[Hg]</span>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="spo2" class="form-label">Blood Oximeter (SpO2)</label>
                        <div class="input-group">
                            <input type="number"
                                   id="spo2"
                                   name="spo2"
                                   class="form-control"
                                   required
                                   min="0"
                                   max="100"
                                   step="1"
                                   placeholder="Enter value"
                                   aria-describedby="spo2Suffix"/>
                            <span class="input-group-text" id="spo2Suffix">%</span>
                        </div>
                        <div class="form-text">Normal range: 95-100%</div>
                    </div>

                    <button type="submit" class="btn btn-primary" formaction="@Url.Action("PostVitals")" formmethod="post" >Submit</button>
                </form>
            }
